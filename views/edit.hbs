<h1>Edit course</h1>


<form action="/courses/edit" method="POST" class="course-form">
        <div class="input-field">
          <input placeholder="Name" name="title" id="coures_name" type="text" value={{course.title}} class="validate" required>
          <label for="course_name">Course Title</label>
          <span class="helper-text" data-error="Please fill in the name"></span>
        </div>

        <div class="input-field">
          <input placeholder="Price" name="price" id="course_price" type="number" value={{course.price}} class="validate" required min="1">
          <label for="coures_price">Course Price</label>
          <span class="helper-text" data-error="Please fill in the price"></span>
        </div>

        <div class="input-field">
          <input placeholder="URL" name="img" id="course_image" type="text" value={{course.img}} class="validate" required>
          <label for="course_image">Course URL</label>
          <span class="helper-text" data-error="Please fill in the URL"></span>
        </div>

        <input type="hidden" name="id" value={{course.id}} />
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn btn-primary">Add Course</button>
</form>
<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value={{course.id}}>
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn red">Remove Course</button>
</form>