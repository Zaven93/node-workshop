<h1 class="center">Courses</h1>

{{#if courses.length}}
{{#each courses}}
    <div class="row">
    <div class="col s6 offset-s3">
      <div class="card">
        <div class="card-image">
          <img src={{img}}>
        </div>
        <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p class="price">{{price}}</p>
        </div>
        <div class="actions">
          <div class="card-action">
          <a href="/courses/{{id}}" target="_blank">More Details</a>
          </div>
         {{#if @root.isAuth}}
           {{#ifeq userId._id @root.userId}}
            <div class="card-action">
              <a href="/courses/{{id}}/edit?allow=true">Edit</a>
            </div>
           {{/ifeq}}
          <form class="card-action" action="/card/add" method="POST">
            <input type="hidden" name="id" value={{id}} >
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <button class="btn btn-primary" type="submit">Add to card</button>
          </form>
         {{/if}}
        </div>
      </div>
    </div>
  </div>
{{/each}}
{{/if}}