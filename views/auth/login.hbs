<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Login</a></li>
        <li class="tab col s6"><a href="#register">Register</a></li>
      </ul>
    </div>
    <div id="login" class="col s12">
      
      {{#if loginError}}
        <p class="alert">{{loginError}}</p>
      {{/if}}

      <h1>Login</h1>
        <form action="/auth/login" method="POST" class="form">
        <div class="input-field">
          <input name="email" id="email" type="email" class="validate" required>
          <label for="course_name">Email</label>
          <span class="helper-text" data-error="Please fill in your email"></span>
        </div>

        <div class="input-field">
          <input name="password" id="password" type="password" class="validate" required min="1">
          <label for="password">Password</label>
          <span class="helper-text" data-error="Please fill in your password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">
        <p><a href="/auth/reset">Forgot password?</a></p>
        <button class="btn btn-primary" type="submit">Login</button>
      </form>
    </div>
    <div id="register" class="col s12">

        {{#if registerError}}
        <p class="alert">{{registerError}}</p>
        {{/if}}

       <h1>Register</h1>
        <form action="/auth/register" method="POST" class="form">
        <div class="input-field">
          <input name="email" id="email" type="email" class="validate" required>
          <label for="email">Email</label>
          <span class="helper-text" data-error="Please fill in your email"></span>
        </div>

        <div class="input-field">
          <input name="name" id="name" type="text" class="validate" required>
          <label for="name">Name</label>
          <span class="helper-text" data-error="Please fill in your name"></span>
        </div>

        <div class="input-field">
          <input name="password" id="rpassword" type="password" class="validate" required min="1">
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Please fill in your password"></span>
        </div>

        <div class="input-field">
          <input name="confirm" id="confirm" type="password" class="validate" required min="1">
          <label for="confirm">Confirm Password</label>
          <span class="helper-text" data-error="Please fill in your password"></span>
        </div>  

        <input type="hidden" name="_csrf" value="{{csrf}}">
              
        <button class="btn btn-primary" type="submit">Register</button>
      </form>
    </div>
    </div>
  </div>
</div>